name: CI Pipeline

on:
  workflow_dispatch:
  pull_request:
    branches: [ main ]

jobs:
  CI:
    runs-on: ubuntu-latest

    steps: Checking out
    uses: actions/checkout@v5

    - name: Set node version
      uses: actions/setup-node@v6
      with:
        node-version: 15

    - name: Install Dependencies
      run: npm install

    - name: Linting
      run: npm run lint

    - name: Run tests
      run: npm run test

    - name: Build
      run: npm run build



    
